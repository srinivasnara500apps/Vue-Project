        "grid": {
            "enabled": true,
            "html": "",
            "grid": {
                "main": "p-5 pb-2 mx-auto [&_.border-2.border-skin-primary.cursor-pointer]:border-0 ",
                "grid": "md:flex flex-wrap",
                "grid_sub": "mr-3 mb-3 divide-y divide-gray-200 rounded-lg "
            }
        },
        "header": {
            "heading": "Add Apps",
            "sub_heading": "We ensure top-class security and we never share your personal information",
            "class": {
                "heading": "text-[15px] font-semibold text-skin-base",
                "sub_heading": "text-[13px] mt-1 text-skin-secondary/80",
                "main": "border-b border-skin-base/10 w-full px-5 pb-5"
            }
        },
        "new": {},
        "edit": {},
        "delete": {},
        "select": {
            "type": "event",
            "url": "",
            "key": "uid"
        },
        "buttons": {
            "add": { "enabled": false, "label": "", "popover": "" },
            "edit": { "enabled": false, "icon": true, "popover": "" },
            "delete": { "enabled": false, "icon": true, "popover": "" }
        }
    },
    "apps": [
        {
            "fields": "client_id,client_secret,refresh_token,token_url",
            "category_name": "Social",
